{
  "name": "ipa.dashboard.tool",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "copy-client": "cd client/build && cpy **/*.* ../../public --parents",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "node ./bin/www",
    "server:debug": "node ./bin/www --debug",
    "build": "cd client && npm run build && cd .. && npm run copy-client",
    "start:production": "npm run build && npm run server",
    "setup": "npm install && cd client && npm install"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "jade": "~1.11.0",
    "morgan": "~1.9.0",
    "mqtt": "2.18.0",
    "node-persist": "3.0.1",
    "node-schedule": "1.3.0",
    "node-unique-id-generator": "0.1.0",
    "socket.io": "2.1.1",
    "socket.io-client": "2.1.1",
    "socketio-wildcard": "2.0.0"
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "cpy-cli": "1.0.1"
  }
}
